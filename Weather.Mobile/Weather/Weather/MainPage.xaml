<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Weather.MainPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#3D4047">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  SEARCHER BACKGROUND  -->
            <BoxView Grid.ColumnSpan="2"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"
                     Color="#333333" />
            <Entry Margin="20,0,0,0"
                   Placeholder="Place"
                   TextColor="White" />

            <Image Grid.Column="1" Source="search_icon.png" />


            <!--  TOP LINE  -->
            <BoxView Grid.Row="1"
                     Grid.ColumnSpan="2"
                     BackgroundColor="#BCBCBC"
                     HeightRequest="2"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand" />
        </Grid>

        <!--  CURRENT DAY  -->
        <Label Grid.Row="1"
               FontAttributes="Bold"
               FontSize="56"
               HorizontalTextAlignment="Center"
               Text="Wednesday"
               TextColor="White"
               VerticalTextAlignment="Center" />

        <!--  CURRENT WEATHER ICON  -->
        <Image Grid.Row="2" Source="large_stormy.png" />

        <!--  CURRENT TEMPERATURE  -->
        <Label Grid.Row="3"
               FontSize="48"
               HorizontalTextAlignment="Center"
               Text="20°"
               TextColor="White"
               VerticalTextAlignment="Center" />

        <!--  BOTTOM  -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  BOTTOM LINE  -->
            <BoxView Grid.ColumnSpan="4"
                     Margin="10,0,10,0"
                     BackgroundColor="#BCBCBC"
                     HeightRequest="2" />

            <!--  WETHER INFORMATION + 1 DAYS  -->
            <StackLayout Grid.Row="1"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <Label HorizontalTextAlignment="Center"
                       Text="Tue"
                       TextColor="White"
                       VerticalTextAlignment="Center" />

                <Label HorizontalTextAlignment="Center"
                       Text="20°"
                       TextColor="White"
                       VerticalTextAlignment="Center" />

                <Image HeightRequest="32"
                       Source="sunny.png"
                       WidthRequest="32" />
            </StackLayout>

            <!--  WETHER INFORMATION + 2 DAYS  -->
            <StackLayout Grid.Row="1"
                         Grid.Column="1"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <Label HorizontalTextAlignment="Center"
                       Text="Wed"
                       TextColor="White"
                       VerticalTextAlignment="Center" />

                <Label HorizontalTextAlignment="Center"
                       Text="16°"
                       TextColor="White"
                       VerticalTextAlignment="Center" />

                <Image HeightRequest="32"
                       Source="partly_cloudy.png"
                       WidthRequest="32" />
            </StackLayout>

            <!--  WETHER INFORMATION + 3 DAYS  -->
            <StackLayout Grid.Row="1"
                         Grid.Column="2"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <Label HorizontalTextAlignment="Center"
                       Text="Thu"
                       TextColor="White"
                       VerticalTextAlignment="Center" />

                <Label HorizontalTextAlignment="Center"
                       Text="18°"
                       TextColor="White"
                       VerticalTextAlignment="Center" />

                <Image HeightRequest="32"
                       Source="rainy.png"
                       WidthRequest="32" />
            </StackLayout>

            <!--  WETHER INFORMATION + 4 DAYS  -->
            <StackLayout Grid.Row="1"
                         Grid.Column="3"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <Label HorizontalTextAlignment="Center"
                       Text="Fri"
                       TextColor="White"
                       VerticalTextAlignment="Center" />

                <Label HorizontalTextAlignment="Center"
                       Text="24°"
                       TextColor="White"
                       VerticalTextAlignment="Center" />

                <Image HeightRequest="32"
                       Source="stormy.png"
                       WidthRequest="32" />

            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>